{
    "name": "hcms",
    "version": "1.2.0",
    "description": "Hardware condition monitoring system",
    "main": "index.js",
    "scripts": {
        "build:prod": "npm run rm-build && tsc && npm run minify-js",
        "build:dev": "tsc && npm run minify-js",
        "start": "node js-build/index.js",
        "debug": "nodemon --config ./nodemon.json ./src/index.ts",
        "insert": "node ./src/server/express/db/scripts/js/data-insert.js",
        "test": "jest",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "minify-js": "uglifyjs-folder js-build -e -x .js -o js-build",
        "rm-build": "rimraf ./js-build"
    },
    "author": "siarhei",
    "license": "MIT",
    "dependencies": {
        "dotenv": "~10.0.0",
        "express": "~4.17.1",
        "lodash": "~4.17.21",
        "node-addon-api": "^4.2.0",
        "node-gyp": "^8.2.0",
        "pg": "~8.6.0",
        "redis": "~4.0.0-rc.2",
        "sql-template-strings": "^2.2.2",
        "tslog": "^3.3.4",
        "ws": "~7.5.5"
    },
    "devDependencies": {
        "@types/express": "~4.17.13",
        "@types/jest": "^28.1.0",
        "@types/lodash": "~4.14.171",
        "@types/node": "~16.9.1",
        "@types/pg": "~8.6.1",
        "@types/redis": "~2.8.32",
        "@types/supertest": "^2.0.12",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/ws": "~7.4.6",
        "@typescript-eslint/eslint-plugin": "^4.6.1",
        "@typescript-eslint/parser": "^4.6.1",
        "eslint": "^7.12.1",
        "eslint-config-prettier": "7.2.0",
        "eslint-import-resolver-typescript": "^3.4.0",
        "eslint-plugin-prettier": "^3.1.4",
        "jest": "^28.0.4",
        "nodemon": "~2.0.9",
        "prettier": "2.7.1",
        "rimraf": "^3.0.2",
        "supertest": "^6.3.0",
        "swagger-ui-express": "^4.5.0",
        "ts-jest": "~28.0.4",
        "ts-node": "~10.0.0",
        "typescript": "~4.4.3",
        "uglifyjs-folder": "^3.1.4"
    }
}
